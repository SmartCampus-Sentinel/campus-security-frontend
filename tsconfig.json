{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/web/*"]
    },
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src/web/**/*"],
  "exclude": ["node_modules", "dist"]
}